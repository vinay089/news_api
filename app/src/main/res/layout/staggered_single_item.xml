<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:elevation="35dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:id="@+id/url_logo_imageview"
                android:elevation="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/url_logo_imageview"
                android:layout_alignParentStart="true"
                android:layout_marginTop="13dp"
                android:id="@+id/name_news_text"
                android:text="Name of the News Site"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_news_text"
                android:layout_marginTop="13dp"
                android:id="@+id/categ_news_text"
                android:text="Category"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categ_news_text"
                android:layout_marginTop="13dp"
                android:id="@+id/descip_news_text"
                android:text="Desription"
                android:textSize="12dp"
                android:textAlignment="textStart"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
